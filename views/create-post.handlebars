<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8" >
      <h1> Add a new post</h1>
      <div class="card" id="newPostCard">
        <div class="card-body">
          <div class="row mt-4">
            <div class="col">
              <form class="form new-post-form">
                <div class="form-group">
                  <label for="post-title">Post Title:</label>
                  <input class="form-input col moveForm" type="text" id="post-title" name="post-title" />
                </div>
                <div class="form-group">
                  <label for="post-content">Post Contents:</label>
                  <textarea class="form-input col moveForm" id="post-content" name="post-content"></textarea>
                </div>
                <div class="form-group">
                  <label for="post-category">Category:</label>
                  <input list="category" class="form-control moveForm" id="post-category">
                  <datalist id="category">
                    {{#each categories as |category|}}
                    <option data-id="{{category.id}}">{{category.name}}</option>
                    {{/each}}
                  </datalist>
                </div>
                <div class="form-group">
                  <button type="submit" class="btn moveFormSubmitBtns">Create Post</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="/./js/postForm.js"></script>
